<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('partials/head', {title: 'Detalle Producto'}) %>
<link rel="stylesheet" href="/css/productDetail.css">

<body class="body-pd">
      <!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

    <%- include('partials/search') %> 

    <main class="main-pd">
        <article>
            <div class="menu">
                <h1><%= product.name %></h1>
                <div class="box">
                    <div class="oferta"><h4>OFERTA: 25% de descuento</h4></div>
                </div>
                 <div class="contenedor">
                    <div class="producto"><img src="/images/<%= product.image %>" alt=""></div>
                    <div class="caja">
                        <div class="precio"><h3>$<%= product.price %></h3></div>
                    <div class="off">
                        <div class="mate"><h3><%= product.name %></h3></div>
                   <div class="box2">
                        <div class="color">
                       <select name="color" id="color">
                           <option value="" selected hidden>Seleccione el color</option>
                           <option value="negro">Negro</option>
                           <option value="marron">Marron</option>
                           <option value="azul">Azul</option>
                           <option value="verde">Verde</option>
                       </select>
                    </div>
                    <div class="carrito">
                        <a href="/products/productcart"><button>AÃ±adir al carrito<i class="fas fa-shopping-cart"></i></button></a>
                     </div>
                   </div>
                    </div>
                </div>
                <div class="detalle">
                    <p><%= product.description %></p>
             </div>
            <br>
                <div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_ES/sdk.js#xfbml=1&version=v12.0" nonce="kxGOGrd3"></script>
<div class="fb-comments" data-href="http://localhost:3000/products/detail" data-width="100%" data-numposts="5"></div>

            </div>
        </article>
    </main>

     <!-- whatsapp -->
     <%- include('partials/whatsapp') %> 

    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer --> 

   

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- custom js file link  -->
    <script src="/js/script.js"></script>
     
    
</body>
</html>