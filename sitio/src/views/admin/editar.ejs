<!--  order section starts  -->

<section class="order" id="order">
	<h1 class="heading">Contacto</h1>

	<form action="/admin/edit/<%= product.id %>?_method=PUT" method="POST">

		<div class="inputBox">
			<div class="input">
				<span>Nombre</span>
				<input type="text" placeholder="Coloca tu nombre" value="<%= product.name %>">
			</div>
			<div class="input">
				<span>Precio</span>
				<input type="number" placeholder="Coloca tu telefono" value="<%= product.price %>">
			</div>
		</div>
		<div class="inputBox">
            <div class="select">  
                <select name="gender" id="gender">
                    <% if (locals.errors && errors.gender) { %>
                          <p style="color: red; font-size: 10px;"><%= errors.gender.msg %></p>
                    <% } %> 
                  <option>Seleccione</option>
                  <option value="femenino" <%= locals.old && locals.gender === 'femenino' ? 'selected' : "" %> >Femenino</option>
                  <option value="masculino" <%= locals.old && locals.gender === 'masculino' ? 'selected' : "" %>>Masculino</option>
                  <option value="otro" <%= locals.old && locals.gender === 'otro' ? 'selected' : "" %>>Otro</option>
                  <option value="otro" <%= locals.old && locals.gender === 'otro' ? 'selected' : "" %>>Prefiero no decirlo</option>
                </select>
              </div>     
			<div class="input">
				<span>Consulta</span>
				<textarea type="" placeholder="Realiza tu consulta"></textarea>
			</div>
		</div>

		<input type="submit" value="Editar" class="btn">

	</form>

</section>