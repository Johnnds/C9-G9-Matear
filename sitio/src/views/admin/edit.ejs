<!DOCTYPE html>
<html lang="es">


    <!-- Include Head -->
<%- include('../partials/head', {title: 'edit'}) %>
<body class="body-admin">

  <!-- Header -->
	<%- include('../partials/header') %>

    <!--main-->
   <div class="admin">
   <main>
    <nav>
        <div class="form">
            <h1>Editar Producto</h1>
            <form action="/admin/edit/<%= producto.id %>?_method=PUT" method="POST">
                <label for="name"></label>
                <input type="text" name="name" id="name" placeholder="Nombre del Producto" value="<%= producto.name %>">
                <br>
                <label for="price"></label>
                <input type="number" name="price" id="price" placeholder="Precio" value=<%= producto.price %>>
                <br>
                <label for="description"></label>
               <textarea name="description" id="description" cols="30" rows="5" placeholder="DescripciÃ³n del producto"><%= producto.description %></textarea>
                <br>
                <label for="category"></label>
                 <select name="category" id="category">
                    <% categorias.forEach(category => { %>
                     <option value="<%= category.name %>" <%= producto.category.toLowerCase() === category.name.toLowerCase() ? 'selected' : null %> ><%= category.name %> </option>
                    <% }) %>
                </select>
                <br>
              
                <button>Editar</button>
            </form>
        </div>
    </nav>
   </main>
   </div>

    <!-- footer -->
	<%- include('../partials/footer') %>
</body>
</html>