<!DOCTYPE html>
<html lang="en">

<!-- Include Head -->
<%- include('partials/head', {title: 'Register'}) %>
<link rel="stylesheet" href="/css/footer.css">
<link rel="stylesheet" href="/css/register.css">

<body>


   <!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

  <main class="register">

    <form  class="form"  action="/users/register" method="POST"  id="form-register" enctype="multipart/form-data">
      <p class="text-danger text-center" id="error-empty"></p>
      <h3>Registro de usuario:</h3>               
      
      <div class="social">
        <a href="#"><img src="http://www.androidpolice.com/wp-content/themes/ap2/ap_resize/ap_resize.php?src=http%3A%2F%2Fwww.androidpolice.com%2Fwp-content%2Fuploads%2F2015%2F10%2Fnexus2cee_Search-Thumb-150x150.png&w=150&h=150&zc=3"></a>
        <a href="#"><img src="/images/facebook_16423.png"></a>
        <a href="#"><img src="/images/twitter-gets-a-new-logo-twitter.png"></a>
      </div>   
              
    <div class="box-form">
      <label for="name">Nombre</label>
     <input  class="form-control <%= locals.errores && errores.name ? 'is-invalid' : null %>" type="text" name="name" id="name" value="" placeholder="Nombre">
     <p id="name-msg" class="text-danger p-2 mt-3 small "><%= locals.errores && errores.name ? errores.name.msg : null %> </p>
      </div>
            <br>            
    <div class="box-form">      
      <label for="lastName">Apellido</label>               
      <input class="form-control <%= locals.errores && errores.lastName ? 'is-invalid' : null %>" type="text" name="lastName" id="lastName"  value="" placeholder="Apellido">
      <p id="lastName-msg" class="text-danger p-1 mt-2 small "><%= locals.errores && errores.lastName ? errores.lastName.msg : null %> </p>
      </div>
              <br>
      <div class="box-form ">         
      <label for="gender">Genero:</label>
      <div class="select <%= locals.errores && errores.gender ? 'is-invalid' : null %>" name="gender" id="gender" type="checkout" >
        <select name="gender"id="gender-msg" class="text-danger p-1 mt-2 small "><%= locals.errores && errores.gender ? errores.gender.msg : null %>>

          <option>Seleccione una opciòn</option>
          <option value="femenino">Femenino</option>
          <option value="masculino">Masculino</option>
          <option value="otro">Otro</option>
          <option value="otro">Prefiero no decirlo</option>
        </select>
      </div>   
      </div>  
      <br> 
      <div class="box-form">
        <label for="email">Email</label>         
        <input class="form-control <%= locals.errores && errores.email ? 'is-invalid' : null %>" type="email" name="email" id="email" value="" placeholder="email">
        <p id="email-msg"  class="text-danger p-1 mt-2 small "><%= locals.errores && errores.email ? errores.email.msg : null %> </p>
      </div>
            <br> 
      <div class="box-form"> 
        <label for="password">Contraseña</label>       
      <input class="form-control <%= locals.errores && errores.password ? 'is-invalid' : null %>" type="password" name="password" id="password" value="" placeholder="password">
      <p id="password-msg"  class="text-danger p-1 mt-2 small "><%= locals.errores && errores.password ? errores.password.msg : null %> </p>
      </div>
                    
      <label for="avatar">Imagen de perfíl:</label>
      <input type="file" name="avatar" id="avatar">
       
      <button type="submit">crear cuenta</button>
      
    </form>

  </main>

  
<script src="/javascript/register.js"></script>


   <!-- whatsapp -->
   <%- include('partials/whatsapp') %> git addg

   

  <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
		
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- custom js file link  -->
    <script src="/javascript/script.js"></script>
  

</body>

</html>

