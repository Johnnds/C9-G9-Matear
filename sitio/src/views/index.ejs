<!DOCTYPE html>
<html lang="es">
  
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>


<body>

  <!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

<%- include('partials/search') %> 

<!-- home section starts  -->

<section class="home" id="home">

  <div class="swiper-container home-slider">

      <div class="swiper-wrapper wrapper">

        <% products.forEach(product => { %> 
          <div class="swiper-slide slide">
              <div class="content">
                  <span><%= product.name %> </span>
                  <h3><%= product.category %></h3>
                  <p><%= product.description %></p>
                  <a href="/products/detail/<%= product.id %> " class="btn">ver mas</a>
              </div>
              <div class="image">
                  <img src="images/<%= product.image %> " alt="">
              </div>
          </div>
          <% }) %> 

      </div>

      <div class="swiper-pagination"></div>

  </div>


</section>

<!-- home section ends -->

 <!--  dishes section starts  -->

 <section class="dishes" class="dishes">

    <h3 class="sub-heading">productos</h3>
    <h1 class="heading">ultimos destacados</h1>

    <div class="box-container">


        <% products.forEach(product => { %> 
            <div class="box">
                <a href="#" class="fas fa-heart"></a>
                <a href="#" class="fas fa-eye"></a>
                <img src="images/<%= product.image %>" alt="">
                <h3><%= product.name %> </h3>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                </div>
                <span>$<%= product.price %> </span>
                <a href="#" class="btn">agregar <i class="fas fa-shopping-cart"></i> </a>
            </div>
        <% }) %> 

    </div>

      <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
		
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- custom js file link  -->
    <script src="/js/script.js"></script>
     
		
	</body>

</html>
