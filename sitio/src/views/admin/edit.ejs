<!DOCTYPE html>
<html lang="es">


    <!-- Include Head -->
<%- include('../partials/head', {title: 'edit'}) %>
<body class="body-admin">

  <!-- Header -->
	<%- include('../partials/header') %>

    <!--main-->
    <section class="order" id="order">
        <h3 class="sub-heading">Edición</h3>
        <h1 class="heading">Editar Producto</h1>
    
        <form action="/admin/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    
            <div class="inputBox">
                <div class="input">
                    <span>Nombre</span>
                    <input type="text" placeholder="" value="<%= product.name %>">
                </div>
                <div class="input">
                    <span>Precio</span>
                    <input type="number" placeholder="" value="<%= product.price %>">
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <img id="image" src="/images/productos/<%= product.image %>">
                </div>
                  <div class="input">
                    <span>Imagen</span>
                    <input type="file" name="image" value="">   
                </div>
            </div>
            <div class="inputBox">
                <div class="input">
                    <span>Precio</span>
                    <div class="caja">
                        <select name="category" id="category" class="seleccionar">
                            <% categories.forEach(categoria => { %>
                            <option value="<%= categoria.id %>" <%= product.categoryId === categoria.id ? 'selected' : null %> ><%= categoria.name %> </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="input">
                    <span>Descripción</span>
                    <textarea type="" placeholder=""><%= product.description %></textarea>
                </div>
            </div>
    
            <input type="submit" value="Editar" class="btn">
    
        </form>

    <!-- footer -->
	<%- include('../partials/footer') %>
</body>
</html>