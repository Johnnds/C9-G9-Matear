<!DOCTYPE html>
<html lang="en">

<!-- Include Head -->
<%- include('partials/head', {title: 'Register' }) %>
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/register.css">

  <body>


    <!-- Header -->
    <%- include('partials/header') %>
      <!-- /Header -->

      <main class="register">

        <form class="form" action="/users/register" method="POST" id="form-register" enctype="multipart/form-data">
          <p id="error-empty"></p>

          <h3>Registro de usuario:</h3>

          <div class="social">
            <a href="#"><img
                src="http://www.androidpolice.com/wp-content/themes/ap2/ap_resize/ap_resize.php?src=http%3A%2F%2Fwww.androidpolice.com%2Fwp-content%2Fuploads%2F2015%2F10%2Fnexus2cee_Search-Thumb-150x150.png&w=150&h=150&zc=3"></a>
            <a href="#"><img src="/images/facebook_16423.png"></a>
            <a href="#"><img src="/images/twitter-gets-a-new-logo-twitter.png"></a>
          </div>

          <div class='box-form'>
            <label for='Name'>Nombre</label>
            <input class="form-control <%= locals.errors && errors.Name ? 'is-invalid' : null %> " type="text"
              name="Name" id="Name" placeholder="Ingresá tu Nombre">
            <small id="Name-error" class="text-danger small">
              <%= locals.errors && errors.Name ? errors.Name.msg : null %>
            </small>
          </div>
          <br>
          <div class='box-form'>
            <label for='lastName'>Apellido</label>
            <input class="form-control <%= locals.errors && errors.lastName ? 'is-invalid': null %> " type="text"
              name="lastName" id="lastName" placeholder="Ingresá tu Apellido">
            <small id="lastName-error" class="text-danger small">
              <%= locals.errors && errors.lastName ? errors.lastName.msg : null %>
            </small>
          </div>
          <br>

          <label>Genero:</label>
          <div class="select">
            <select name="gender" id="gender">
              <% if (locals.errors && errors.gender) { %>
                <p style="color: red; font-size: 10px;">
                  <%= errors.gender.msg %>
                </p>
                <% } %>
                  <option>Seleccione</option>
                  <option value="femenino" <%=locals.old && locals.gender==='femenino' ? 'selected' : "" %> >Femenino
                  </option>
                  <option value="masculino" <%=locals.old && locals.gender==='masculino' ? 'selected' : "" %>>Masculino
                  </option>
                  <option value="otro" <%=locals.old && locals.gender==='otro' ? 'selected' : "" %>>Otro</option>
                  <option value="otro" <%=locals.old && locals.gender==='otro' ? 'selected' : "" %>>Prefiero no decirlo
                  </option>
            </select>
          </div>
          <br>


          <div class="box-form">
            <label for="email">Email</label>
            <input class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %> " type="email"
              name="email" id="email" placeholder="Ingresa tu email">
            <small class="text-danger small">
              <%=locals.errors && errors.email ? errors.email.msg : null %>
            </small>

          </div>


          <br>
          <div class="box-form">
            <label for="password">Contraseña</label>
            <input class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %> type=" password"
              name="password" id="password" placeholder="Ingresa la Contraseña">
            <small class="text-danger small">
              <%= locals.errors && errors.password ? errors.password.msg : null %><small>
          </div>
          <br>
          <div class="box-form">
            <label for="password2">Contraseña</label>
            <input class="form-control <%= locals.errors && errors.password2 ? 'is-invalid' : null %> " type="password"
              name="password2" placeholder="Confirma la Contraseña">
            <small id="password2-error" class="p-1 mt-2 text-danger small">
              <%= locals.errors && errors.password2 ? errors.password2.msg : null %> <small>
          </div>
          <br>
          <div class="box-form">
            <label for="image">Imagen de perfíl:</label>
            <input type="file" name="image" id="image">

          </div>

          <button type="submit">crear cuenta</button>

        </form>

      </main>

      <!-- whatsapp -->
      <%- include('partials/whatsapp') %>

        /*validacion*/
        <script src='/javascript/registerValidation.js'></script>

        <!-- footer -->
        <%- include('partials/footer') %>
          <!-- /footer -->

          <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

          <!-- custom js file link  -->
          <script src="/js/script.js"></script>

  </body>

</html>