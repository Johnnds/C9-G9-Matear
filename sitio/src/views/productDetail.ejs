<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->

<%- include('partials/head', {title: 'Inicio'}) %>
<link rel="stylesheet" href="/css/productDetail.css">


<body class="productDetail">

  <!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

<%- include('partials/search') %> 

		
      <div class = "card-wrapper">
        <div class = "card">
          <!-- card left -->
          <div class = "producto-imgs">
            <div class = "imge-display">

            <div class = "imge-showcase">
                <span class="oferta"><%= product.discount %> </span>
                <img class="imageDetail" src = "/images/<%= product.image %> " alt = "shoe image">
                
              </div>
            </div>
            <div class = "imge-select">
              <div class = "imge-item">
                <a href = "#" data-id = "1">
                  <img class="imageDetail" src = "/images/<%= product.image %> " alt = "shoe image">
                </a>
              </div>
              
            </div>
          </div>
          <!-- card right -->
          <div class = "producto-content">
            <h2 class = "producto-title"><%= product.name %> </h2>
            <a href = "#" class = "/products/list">visita Mate@r store</a>
            <div class = "producto-rating">
              <i class = "fas fa-star"></i>
              <i class = "fas fa-star"></i>
              <i class = "fas fa-star"></i>
              <i class = "fas fa-star"></i>
              <i class = "fas fa-star-half-alt"></i>
              <span>4.7(21)</span>
            </div>
  
            <div class = "producto-price">
              <p class = "last-price">Precio: <span><%= product.price %> </span></p>
              <p class = "new-price">Precio: <span>$249.00 (<%= product.discount %> %)</span></p>
            </div>
  
            <div class = "producto-detail">
              <h2 class="description">Descripción: </h2>
              <p><%= product.description %> </p>
              <ul>
                <li> Color: 
                  <div class="select">  
                    <select name="gender" id="gender">
                        <% if (locals.errors && errors.gender) { %>
                              <p style="color: red; font-size: 10px;"><%= errors.gender.msg %></p>
                        <% } %> 
                      <option>Seleccione</option>
                      <option value="femenino" <%= locals.old && locals.gender === 'femenino' ? 'selected' : "" %> >Femenino</option>
                      <option value="masculino" <%= locals.old && locals.gender === 'masculino' ? 'selected' : "" %>>Masculino</option>
                      <option value="otro" <%= locals.old && locals.gender === 'otro' ? 'selected' : "" %>>Otro</option>
                      <option value="otro" <%= locals.old && locals.gender === 'otro' ? 'selected' : "" %>>Prefiero no decirlo</option>
                    </select>
                  </div>               
                </li>
                <li> Cantidad: <span><%= product.stock %> </span></li>
                <li> Categoria: <span><%= product.category %> </span></li>
              </ul>
            </div>
  
            <div class = "purchase-info">
              <input type = "number" min = "0" value = "1">
              <button type = "button" class = "btn">
                Añadir <i class = "fas fa-shopping-cart"></i>
              </button>
              <button type = "button" class = "btn">Comparar</button>
            </div>
  
            <div class = "social-links">
              <p>Visitanos: </p>
              <a href = "#">
                <i class = "fab fa-facebook-f"></i>
              </a>
              <a href = "#">
                <i class = "fab fa-twitter"></i>
              </a>
              <a href = "#">
                <i class = "fab fa-instagram"></i>
              </a>
              <a href = "#">
                <i class = "fab fa-whatsapp"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      <section class="dishes" class="dishes">

        <h3 class="sub-heading">productos</h3>
        <h1 class="heading">relacionados</h1>
    
        <div class="box-container">

          <% for(let i = 0; i < 4; i++) { %>
    
                <div class="box">
    
                    <img src="/images/<%= productsCategory[i].image %>" alt="">
                    <h3><%= productsCategory[i].name %> </h3>
                    <span>$<%= productsCategory[i].price %> </span>
                    <a href="/products/detail/<%= productsCategory[i].id %> " class="btn">ver mas <i class="fas fa-info-circle"></i> </a>
                </div>

                <% } %> 
      
        </div>
    
    </section>

    <div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_ES/sdk.js#xfbml=1&version=v12.0" nonce="kxGOGrd3"></script>
<div class="fb-comments" data-href="http://localhost:3000/products/detail" data-width="100%" data-numposts="5"></div>

            </div>
  
      
      <script src="script.js"></script>
       

     
    
</body>
</html>